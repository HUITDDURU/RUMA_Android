<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="fragment"
            type="com.example.huitdduru.view.exchange.FindMateFragment" />
        <variable
            name="userInfo"
            type="com.example.domain.entity.user.UserInfoResponseEntity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.exchange.FindMateFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_gravity="center"
            android:text="@string/find_mate_title"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:fontFamily="@font/font_noto_sans_kr_bold"
            android:includeFontPadding="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="@string/find_user"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/font_noto_sans_kr_regular"
            android:includeFontPadding="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray2"
            android:orientation="horizontal"
            android:layout_marginTop="60dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mate_profile_iv"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="@drawable/profile_radius"
                    android:src="@drawable/ic_profile"
                    android:scaleType="fitCenter"
                    loadImage="@{userInfo.img}"/>

                <TextView
                    android:id="@+id/mate_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@{userInfo.name}"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/font_noto_sans_kr_regular"
                    android:includeFontPadding="false"/>

            </LinearLayout>

            <TextView
                android:id="@+id/mate_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="40dp"
                android:text="@{userInfo.intro}"
                android:textColor="@color/gray1"
                android:fontFamily="@font/font_noto_sans_kr_regular"
                android:includeFontPadding="false"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/refuse_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/refuse_btn_background"
                android:text="@string/random_match_refuse"
                android:textSize="16sp"
                android:textColor="@color/red"
                android:fontFamily="@font/font_noto_sans_kr_bold"
                android:includeFontPadding="false"/>

            <Button
                android:id="@+id/accept_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@drawable/accept_btn_background"
                android:text="@string/random_match_accept"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/font_noto_sans_kr_bold"
                android:includeFontPadding="false"/>

        </LinearLayout>

    </LinearLayout>

</layout>